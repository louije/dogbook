datasource sqlite {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String    @id @default(cuid())
  name      String    @default("")
  email     String    @unique @default("")
  password  String
  createdAt DateTime? @default(now())
}

model Dog {
  id                      String  @id @default(cuid())
  name                    String  @default("")
  sex                     String?
  birthday                String?
  breed                   String  @default("")
  coat                    String  @default("")
  owner                   Owner?  @relation("Dog_owner", fields: [ownerId], references: [id])
  ownerId                 String? @map("owner")
  photoFeatured_id        String?
  photoFeatured_filesize  Int?
  photoFeatured_width     Int?
  photoFeatured_height    Int?
  photoFeatured_extension String?
  photos                  Media[] @relation("Media_dog")
  description             String  @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")

  @@index([ownerId])
}

model Owner {
  id    String @id @default(cuid())
  name  String @default("")
  email String @default("")
  phone String @default("")
  dogs  Dog[]  @relation("Dog_owner")
}

model Media {
  id             String  @id @default(cuid())
  name           String  @default("")
  file_id        String?
  file_filesize  Int?
  file_width     Int?
  file_height    Int?
  file_extension String?
  type           String? @default("photo")
  videoUrl       String  @default("")
  dog            Dog?    @relation("Media_dog", fields: [dogId], references: [id])
  dogId          String? @map("dog")
  isFeatured     Boolean @default(false)

  @@index([dogId])
}
