datasource sqlite {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                      String    @id @default(cuid())
  name                    String    @default("")
  email                   String    @unique @default("")
  password                String
  createdAt               DateTime? @default(now())
  passwordResetToken      String?
  passwordResetIssuedAt   DateTime?
  passwordResetRedeemedAt DateTime?
}

model Dog {
  id       String  @id @default(cuid())
  name     String  @default("")
  sex      String?
  birthday String?
  breed    String  @default("")
  coat     String  @default("")
  owner    Owner?  @relation("Dog_owner", fields: [ownerId], references: [id])
  ownerId  String? @map("owner")
  photos   Media[] @relation("Media_dog")

  @@index([ownerId])
}

model Owner {
  id    String @id @default(cuid())
  name  String @default("")
  email String @default("")
  phone String @default("")
  dogs  Dog[]  @relation("Dog_owner")
}

model Media {
  id             String    @id @default(cuid())
  name           String    @default("Photo")
  file_id        String?
  file_filesize  Int?
  file_width     Int?
  file_height    Int?
  file_extension String?
  type           String?   @default("photo")
  videoUrl       String    @default("")
  dog            Dog?      @relation("Media_dog", fields: [dogId], references: [id])
  dogId          String?   @map("dog")
  isFeatured     Boolean   @default(false)
  status         String?   @default("pending")
  uploadedAt     DateTime?

  @@index([dogId])
}

model Settings {
  id             Int     @id
  moderationMode String? @default("a_posteriori")
}

model PushSubscription {
  id        String    @id @default(cuid())
  endpoint  String    @unique @default("")
  keys      String    @default("")
  createdAt DateTime?
}
