---
layout: base.njk
title: Accueil
---

<section class="hero">
  <div class="hero__container">
    <div class="hero__header">
      <div class="hero__text">
        <h2 class="hero__title">Trombi Maisons-Doggo</h2>
        <p class="hero__tagline">
          <span class="hero__description">Ils sont tous beaux.</span>
          <span class="theme-buttons">
            <button type="button" class="theme-button" data-theme="light" aria-label="Light mode" title="Light mode">
              <svg viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                <ellipse cx="8" cy="10" rx="6" ry="5" fill="white"/>
                <circle cx="5" cy="6" r="3" fill="white"/>
                <circle cx="4" cy="5" r="1" fill="black"/>
              </svg>
            </button>
            <button type="button" class="theme-button" data-theme="dark" aria-label="Dark mode" title="Dark mode">
              <svg viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                <ellipse cx="8" cy="10" rx="6" ry="5" fill="black" stroke="white" stroke-width="0.5"/>
                <circle cx="5" cy="6" r="3" fill="black" stroke="white" stroke-width="0.5"/>
                <circle cx="4" cy="5" r="1" fill="white"/>
              </svg>
            </button>
            <button type="button" class="theme-button" data-theme="snow" aria-label="Snow mode" title="Snow mode">
              <svg viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M8 1v14M1 8h14M3 3l10 10M13 3L3 13" stroke="white" stroke-width="1.5" stroke-linecap="round"/>
                <circle cx="8" cy="8" r="2" fill="white"/>
              </svg>
            </button>
          </span>
        </p>
      </div>
      <div class="hero__actions">
        <button
          type="button"
          class="hero__magic-toggle magic-indicator"
          onclick="window.confirmDeactivateMagic && window.confirmDeactivateMagic()"
          hidden
        >✏️</button>
        <button class="hero__search-toggle" id="search-toggle" aria-label="Toggle search">
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
            <circle cx="8" cy="8" r="6" stroke="currentColor" stroke-width="2"/>
            <path d="M12.5 12.5L17 17" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
          </svg>
        </button>
      </div>
    </div>
    <div class="hero__search-container" id="search-container">
      <input
        type="search"
        id="search-input"
        class="hero__search-input"
        placeholder="Rechercher par chien, par race, par humain..."
        aria-label="Rechercher par nom de chien, race, robe ou humain"
      >
    </div>
  </div>
</section>

<section class="dogs">
  <div class="dogs__container">
    <div class="dogs__grid" id="dogs-grid">
      {% for dog in dogs %}
      <figure class="dog-card"
               data-name="{{ dog.name | lower }}"
               data-sex="{{ dog.sex }}"
               data-breed="{{ dog.breed | lower }}"
               data-coat="{{ dog.coat | lower }}"
               data-owner="{{ (dog.owner.name if dog.owner else '') | lower }}">
        <a href="/chiens/{{ dog.id }}/" class="dog-card__link">
          <img
            src="{{ dog | getFeaturedPhoto }}"
            alt="{{ dog.name }}"
            class="dog-card__image"
            loading="lazy"
          >
          <figcaption class="dog-card__caption">
            <h3 class="dog-card__name">{{ dog.name }}</h3>
            {% if dog.owner %}
            <p class="dog-card__owner">{{ dog.owner.name }}</p>
            {% endif %}
          </figcaption>
        </a>
      </figure>
      {% endfor %}
      <figure class="dog-card dog-card--add add-button" hidden>
        <button
          type="button"
          class="dog-card__link dog-card__add-button"
          onclick="openAddDogModal()"
          title="Ajouter un chien"
        >
          <span class="dog-card__add-icon">➕</span>
          <span class="dog-card__add-text">Ajouter un chien</span>
        </button>
      </figure>
    </div>
  </div>
</section>
