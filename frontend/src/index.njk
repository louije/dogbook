---
layout: base.njk
title: Accueil
year: 2025
---

<section class="hero">
  <div class="hero__container">
    <div class="hero__header">
      <div>
        <h2 class="hero__title">Trombi Maisons-Doggo</h2>
        <p class="hero__description">Ils sont tous beaux.</p>
      </div>
      <div class="hero__actions">
        <button class="hero__search-toggle" id="search-toggle" aria-label="Toggle search">
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
            <circle cx="8" cy="8" r="6" stroke="currentColor" stroke-width="2"/>
            <path d="M12.5 12.5L17 17" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
          </svg>
        </button>
        <button class="hero__filter-toggle" id="filter-toggle" aria-label="Toggle filters">
          <svg width="24" height="18" viewBox="0 0 24 18" fill="none" xmlns="http://www.w3.org/2000/svg">
            <rect width="24" height="3" rx="1.5" fill="currentColor"/>
            <rect x="4" y="7.5" width="16" height="3" rx="1.5" fill="currentColor"/>
            <rect x="8" y="15" width="8" height="3" rx="1.5" fill="currentColor"/>
          </svg>
        </button>
      </div>
    </div>
    <div class="hero__search-container" id="search-container">
      <input
        type="search"
        id="search-input"
        class="hero__search-input"
        placeholder="Rechercher..."
        aria-label="Rechercher par nom, race, robe ou maÃ®tre"
      >
    </div>
    <div class="hero__controls" id="filter-controls">
      <div class="control-group">
        <label for="sort" class="control-label">Classer par :</label>
        <select id="sort" class="control-select">
          <option value="name">Nom</option>
          <option value="breed">Race</option>
          <option value="coat">Pelage</option>
        </select>
      </div>
      <div class="control-group">
        <label for="filter-breed" class="control-label">Race :</label>
        <select id="filter-breed" class="control-select">
          <option value="">Toutes</option>
        </select>
      </div>
      <div class="control-group">
        <label for="filter-coat" class="control-label">Robe :</label>
        <select id="filter-coat" class="control-select">
          <option value="">Tous</option>
        </select>
      </div>
    </div>
  </div>
</section>

<section class="dogs">
  <div class="dogs__container">
    <div class="dogs__grid" id="dogs-grid">
      {% for dog in dogs %}
      <figure class="dog-card"
               data-name="{{ dog.name | lower }}"
               data-sex="{{ dog.sex }}"
               data-breed="{{ dog.breed | lower }}"
               data-coat="{{ dog.coat | lower }}"
               data-owner="{{ (dog.owner.name if dog.owner else '') | lower }}">
        <a href="/chiens/{{ dog.id }}/" class="dog-card__link">
          <img
            src="{{ dog | getFeaturedPhoto }}"
            alt="{{ dog.name }}"
            class="dog-card__image"
            loading="lazy"
          >
          <figcaption class="dog-card__caption">
            <h3 class="dog-card__name">{{ dog.name }}</h3>
            {% if dog.owner %}
            <p class="dog-card__owner">{{ dog.owner.name }}</p>
            {% endif %}
          </figcaption>
        </a>
      </figure>
      {% endfor %}
    </div>
  </div>
</section>
