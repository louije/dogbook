---
pagination:
  data: owners
  size: 1
  alias: owner
permalink: "/maitres/{% if pagination.pageNumber > 0 %}{{ owner.id }}/{% endif %}"
layout: base.njk
eleventyComputed:
  title: "{% if pagination.pageNumber > 0 %}{{ owner.nom }}{% else %}Maîtres{% endif %}"
  year: 2024
---

{% if pagination.pageNumber === 0 %}
<section class="owners">
  <div class="owners__container">
    <h2 class="owners__title">Nos Maîtres</h2>
    <div class="owners__grid">
      {% for owner in owners %}
      <article class="owner-card">
        <a href="/maitres/{{ owner.id }}/" class="owner-card__link">
          <h3 class="owner-card__name">{{ owner.nom }}</h3>
          <p class="owner-card__dogs">
            {{ owner.dogs.length }} chien{{ 's' if owner.dogs.length > 1 else '' }}
          </p>
        </a>
      </article>
      {% endfor %}
    </div>
  </div>
</section>
{% else %}
<article class="owner-detail">
  <div class="owner-detail__container">
    <div class="owner-detail__header">
      <h2 class="owner-detail__name">{{ owner.nom }}</h2>
      <a href="/maitres/" class="owner-detail__back">← Retour aux maîtres</a>
    </div>

    {% if owner.email or owner.telephone %}
    <div class="owner-detail__contact">
      {% if owner.telephone %}
      <p><strong>Téléphone:</strong> {{ owner.telephone }}</p>
      {% endif %}
      {% if owner.email %}
      <p><strong>Email:</strong> <a href="mailto:{{ owner.email }}">{{ owner.email }}</a></p>
      {% endif %}
    </div>
    {% endif %}

    {% if owner.dogs.length > 0 %}
    <div class="owner-detail__dogs">
      <h3 class="owner-detail__dogs-title">Ses chiens</h3>
      <ul class="owner-detail__dogs-list">
        {% for dog in owner.dogs %}
        <li class="owner-detail__dogs-item">
          <a href="/chiens/{{ dog.id }}/" class="owner-detail__dogs-link">
            {{ dog.nom }}
          </a>
        </li>
        {% endfor %}
      </ul>
    </div>
    {% endif %}
  </div>
</article>
{% endif %}
